{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts",   // Stop compiler from worrying about tests
    "**/*.spec.ts", 
    "test"            // Exclude the folder causing the crash
  ]
}
